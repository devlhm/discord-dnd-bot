{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": ["error", "always", { "omitLastInOneLineBlock": true}],
        "no-tabs": ["error", { "allowIndentationTabs": true }],
        "no-unused-vars": "off",
        "indent": ["error", "tab"]
    }
}